# Discord Bot Token
DISCORD_TOKEN=your_discord_bot_token_here

# Database configuration
# PostgreSQL (for production)
DATABASE_URL=postgresql://username:password@localhost:5432/database_name
# For Replit PostgreSQL, create database using Tools > Database
# and the environment variables will be automatically set up
# SQLite (for development or when PostgreSQL is unavailable)
# DATABASE_URL=sqlite:///app.db

# Session Secret for Flask web app
SESSION_SECRET=your_session_secret_here

# Optional: Start bot along with web app (set to "true" or "false")
START_BOT=true

# Optional: Port for web server
PORT=5000

# Optional: Default Prefix
PREFIX=!

# Optional: Flag to indicate when running in discord_bot workflow
# DISCORD_BOT_WORKFLOW=true
