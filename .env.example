# Discord Bot Token (Required)
DISCORD_TOKEN=your_discord_bot_token_here

# Database URL (Optional, defaults to SQLite if not provided)
# For PostgreSQL: postgresql://username:password@host:port/database
# For SQLite: sqlite:///app.db
DATABASE_URL=sqlite:///app.db

# Web server settings (Optional)
PORT=5000
HOST=0.0.0.0

# Session Secret for Flask (Auto-generated if not provided)
SESSION_SECRET=your_secure_session_secret

# Bot Control (Used by web interface)
START_BOT=true
